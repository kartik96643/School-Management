<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Passout Students</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #f1f7ff, #e0f7fa);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      margin-top: 60px;
    }

    .table-container {
      background: #ffffff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 5px 20px rgba(0, 123, 255, 0.1);
    }

    h2 {
      text-align: center;
      color: #0d6efd;
      margin-bottom: 30px;
    }

    table th {
      background-color: #0d6efd;
      color: white;
      vertical-align: middle;
    }

    table td {
      vertical-align: middle;
    }

    .no-data {
      text-align: center;
      font-size: 1.2rem;
      color: #888;
      margin-top: 50px;
    }

    @media print{
        .no-print{
            display: none;
        }
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>
    
    <div class="container">
        <% if (students && students.length > 0) { %>
            <% let totalStudents = students.length %>
      <div class="table-container">
        <h2>ðŸŽ“ Passout Students List - <%= students[0].stream  %> [<%= students[0].session  %>]</h2>
        <table class="table table-bordered table-hover text-center">
          <thead>
            <tr>
              <th>S.No.</th>
              <th>Student Name</th>
              <th>Registration No.</th>
              <th>Father's Name</th>
              <th>Mother's Name</th>
              <th>Contact No.</th>
              <th>Gender</th>
             
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= student.studentName %></td>
                <td><%= student.registrationNo %></td>
                <td><%= student.fatherName %></td>
                <td><%= student.motherName %></td>
                <td><%= student.contactNo %></td>
                <td><%= student.gender %></td>
              </tr>
            <% }) %>
          </tbody>


          <tr>
            <td></td>
            <td><strong>Total Students:</strong> <%= totalStudents  %></td>
          </tr>
        </table>

    </div>
     <div class="text-center mt-4">
        <button class="btn btn-primary no-print" onclick="window.print()">Print</button>
        <button class="btn"><a href="/students/passout" class="btn btn-primary no-print">â¬… Back</a></button>
    </div>

    <% } else { %>
      <p class="no-data">No passout students found for the selected session.</p>
    <% } %>
  </div>

</body>
</html>
