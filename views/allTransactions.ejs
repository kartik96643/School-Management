<!DOCTYPE html>
<html>
<head>
  <title>All Fee Transactions</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>

    .table-container {
      max-width: 1000px;
      margin: 50px auto;
    }
    .table th, .table td {
      vertical-align: middle;
    }

    @media print{
        .no-print{
            display:none;
        }
    }
  </style>
</head>
<body class="bg-light">


  <div class="container table-container">
    <h2 class="text-center mb-4">All Fee Transactions</h2>

    <% if (transactions.length > 0) { %>
      <table class="table table-bordered table-striped shadow-sm bg-white">
        <thead class="table-dark">
          <tr>
            <th>Receipt No</th>
            <th>Student Name</th>
            <th>Registration No</th>
            <th>Student Class</th>
            <th>Amount (â‚¹)</th>
            <th>Payment Method</th>
            <th>Date</th>
            <th>Actions</th>

          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(tx => { %>
            <tr>
              <td><%= tx.receptNo %></td>
              <td><%= tx.studentName %></td>
              <td><%= tx.registrationNo %></td>
              <td><%= tx.studentClass  %> <%= tx?.stream || ''  %></td>
              <td><%= tx.amount %></td>
              <td><%= tx.paymentMethod %></td>
              <td><%= new Date(tx.date).toLocaleDateString() %></td>
              <td><a href="/students/studentFees/receipt/<%= tx.receptNo  %>" class="btn btn-success">View</a></td>
              
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="d-grid gap-2">
          
          <button class="btn  btn-success no-print" onclick="window.print()">Print</button>
        </div>
    <% } else { %>
      <div class="alert alert-info text-center">
        No transactions found.
      </div>
    <% } %>
  </div>

</body>
</html>
