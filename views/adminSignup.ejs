<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      min-height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-image: url("/assets/signup.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      backdrop-filter: blur(2px);
      position: relative;
      overflow: hidden;
    }

    body::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      z-index: 0;
    }

    .signup-card {
      position: relative;
      z-index: 1;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 20px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.18);
      padding: 2.5rem;
      max-width: 500px;
      width: 100%;
      color: #fff;
    }

    .signup-card h2 {
      font-weight: 600;
      color: #ffffff;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
      margin-bottom: 1.5rem;
    }

    .form-label {
      font-weight: 600;
      color: #f0f0f0;
    }

    .form-control {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: #fff;
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }

    .form-control:focus {
      background-color: rgba(255, 255, 255, 0.15);
      border-color: #f093fb;
      box-shadow: 0 0 0 0.2rem rgba(240, 147, 251, 0.25);
      color: #fff;
    }

    .btn-primary {
      background: linear-gradient(to right, #f093fb, #f5576c);
      border: none;
      font-weight: bold;
      transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
      background: linear-gradient(to right, #f5576c, #f093fb);
      transform: scale(1.02);
    }

    .form-text {
      font-size: 0.85rem;
      color: #e0e0e0;
    }

    .alert {
      max-width: 500px;
      margin-bottom: 1rem;
      background-color: rgba(255, 0, 0, 0.3);
      border: none;
      backdrop-filter: blur(5px);
      color: #fff;
      z-index: 1;
    }

    .error-msg {
      color: #ffd6d6;
      font-size: 0.9rem;
    }

    .toggle-password {
      position: absolute;
      top: 38px;
      right: 15px;
      cursor: pointer;
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.8);
    }
  </style>
</head>

<body>

  <% if (errors && errors.length > 0) { %>
    <div class="alert alert-danger forSec">
      <ul class="mb-0">
        <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <div class="signup-card">
    <h2 class="text-center">Admin Signup</h2>

    <form method="post" action="/admin/signup">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name"
          value="<%= formdata && formdata.name ? formdata.name : '' %>">
        <% if (errors && errors.length) {
              for (let i = 0; i < errors.length; i++) {
                  if (errors[i].param === 'name') { %>
          <div class="error-msg mt-1"><%= errors[i].msg %></div>
        <% break; }}} %>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email"
          value="<%= formdata && formdata.email ? formdata.email : '' %>">
        <div class="form-text">We'll never share your email with anyone else.</div>
        <% if (errors && errors.length) {
              for (let i = 0; i < errors.length; i++) {
                  if (errors[i].param === 'email') { %>
          <div class="error-msg mt-1"><%= errors[i].msg %></div>
        <% break; }}} %>
      </div>

      <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password"
          value="<%= formdata && formdata.password ? formdata.password : '' %>">
        <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
        <% if (errors && errors.length) {
              for (let i = 0; i < errors.length; i++) {
                  if (errors[i].param === 'password') { %>
          <div class="error-msg mt-1"><%= errors[i].msg %></div>
        <% break; }}} %>
      </div>

       <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select class="form-select" id="role" name="role" required>
                  <option value="">Select Role</option>
                  <option value="ADMIN" <%=(formdata && formdata.role==='ADMIN' ) ? 'selected' : '' %>>ADMIN
                  </option>
                  <option value="NORMAL" <%=(formdata && formdata.role==='NORMAL' ) ? 'selected' : '' %>>NORMAL
                  </option>
                  <option value="ACCOUNTANT" <%=(formdata && formdata.role==='ACCOUNTANT' ) ? 'selected' : '' %>>ACCOUNTANT
                  </option>
                </select>
                <% if(errors && errors.length) { for(let i=0; i<errors.length; i++){ if(errors[i].param==='role' ){ %>
                  <p style="color:red;">
                    <%= errors[i].msg %>
                  </p>
                  <% break; } }} %>
              </div>

      <div class="mb-3">
        <label for="sName" class="form-label">School Name</label>
        <input type="text" class="form-control" id="sName" name="sName"
          value="<%= formdata && formdata.sName ? formdata.sName : '' %>">
        <% if (errors && errors.length) {
              for (let i = 0; i < errors.length; i++) {
                  if (errors[i].param === 'sName') { %>
          <div class="error-msg mt-1"><%= errors[i].msg %></div>
        <% break; }}} %>
      </div>

      <div class="mb-3">
        <label for="sAddress" class="form-label">School Address</label>
        <input type="text" class="form-control" id="sAddress" name="sAddress"
          value="<%= formdata && formdata.sAddress ? formdata.sAddress : '' %>" required>
        <% if (errors && errors.length) {
              for (let i = 0; i < errors.length; i++) {
                  if (errors[i].param === 'sAddress') { %>
          <div class="error-msg mt-1"><%= errors[i].msg %></div>
        <% break; }}} %>
      </div>

      <div class="d-grid mt-4">
        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function togglePassword() {
      const pwd = document.getElementById("password");
      const type = pwd.getAttribute("type") === "password" ? "text" : "password";
      pwd.setAttribute("type", type);
    }

    window.addEventListener("DOMContentLoaded", () => {
        const alert = document.querySelector(".forSec");
        if (alert) {
          setTimeout(() => {
            alert.style.opacity = "0";
            setTimeout(() => {
              alert.style.display = "none";
            }, 500);
          }, 2000);
        }
      });
  </script>
</body>

</html>
