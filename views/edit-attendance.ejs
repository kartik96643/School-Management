<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f6fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            width: 800px;
        }

        .form-container h2 {
            margin-bottom: 15px;
            text-align: center;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="form-container">

        <% if(attendance && attendance.length> 0) { %>

            <h2>Edit Attendance</h2>
            <form method="POST" action="/attendance/update/<%= attendance[0]._id %>">
                <div class="form-group mb-3">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" class="form-control"
                        value="<%= attendance[0].date.toISOString().split('T')[0] %>" required>
                </div>

                <div class="form-group mb-3">
                    <label for="className">Class Name</label>
                    <input type="text" name="className" id="className" class="form-control"
                        value="<%= attendance[0].className %>" readonly>
                </div>

                <div class="form-group mb-3">
                    <label for="medium">Medium</label>
                    <input type="text" name="medium" id="medium" class="form-control"
                        value="<%= attendance[0].medium %>" readonly>
                </div>


                <h5 class="mt-4">Students Attendance</h5>
                <table class="table table-bordered mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>S.No.</th>
                            <th>Student Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% attendance[0].records.forEach((rec, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>

                                <td>
                                    <input type="hidden" name="records[<%= index %>][studentId]"
                                        value="<%= rec.studentId %>">
                                    <input type="text" class="form-control"
                                        value="<%= studentNames[index] ? studentNames[index].studentName : 'Unknown' %>"
                                        readonly>
                                </td>
                                <td>

                                    <div class="d-flex justify-content-center gap-3">
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Present"
                                                id="present-<%= index %>" <%=rec.status==="Present" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="present-<%= index %>">Present</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Absent"
                                                id="absent-<%= index %>" <%=rec.status==="Absent" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="absent-<%= index %>">Absent</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Leave"
                                                id="leave-<%= index %>" <%=rec.status==="Leave" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="leave-<%= index %>">Leave</label>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <button type="submit" class="btn btn-primary w-100">Update</button>
                <button class="btn w-100"><a href="/attendance/student-form" class="btn btn-primary w-100">Cancel</a></button>
            </form>



            <% } else { %>
                <div>
                    <p>No Attendance data to edit</p>
                </div>
                <% } %>
    </div>

    <script>
        const classSelect = document.getElementById("className");
        const streamGroup = document.getElementById("stream-group");

        function toggleStream() {
            if (classSelect.value === "11" || classSelect.value === "12") {
                streamGroup.style.display = "block";
                document.getElementById("stream").setAttribute("required", "true");
            } else {
                streamGroup.style.display = "none";
                document.getElementById("stream").removeAttribute("required");
            }
        }

        toggleStream();
        classSelect.addEventListener("change", toggleStream);
    </script>
</body>

</html>