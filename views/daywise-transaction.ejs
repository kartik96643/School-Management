<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daywise Transaction</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      margin-top: 50px;
    }

    table {
      margin-top: 30px;
    }

    th {
      background-color: #0d6efd;
      color: white;
    }

    .no-data {
      margin-top: 30px;
      font-style: italic;
      color: #6c757d;
    }

    @media print{
        .no-print{
            display: none;
        }
    }
  </style>
</head>

<body>
  <div class="container">
    <h2 class="text-center text-primary mb-4">Daywise Fee Transactions</h2>

    <% if (!result && students && students.length > 0) { %>
      <form action="/students/feeReceipt/daywise" method="post" class="row g-3">
        <div class="col-md-6 offset-md-3">
          <label for="date" class="form-label">Select Date</label>
          <input type="date" class="form-control" id="date" name="date" required>
        </div>
        <div class="col-12 text-center">
          <button type="submit" class="btn btn-success mt-3">Submit</button>
          
          <button class="btn" ><a href="/students/studentFees" class="btn btn-success no-print">Back</a></button>
        </div>
      </form>
      <%= students.length  %> 
       <div class="container">
    <h2 class="text-center text-primary mb-4">Classwise Due Amount by Medium <%= students.session%></h2>

    <% const mediums = ['Hindi', 'English']; %>
<% mediums.forEach(medium => { %>
  <h4 class="mt-5"><%= medium %> Medium </h4>
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
          <th>S.No.</th>
          <th>Class</th>
          <th>Stream</th>
          <th>Total Fees</th>
          <th>Total Fees Paid</th>
          <th>Total Dues</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let index = 1;
          let overallFees = 0;
          let overallPaid = 0;
          let overallDue = 0;

          students.forEach(group => {
            const [grpMedium, studentClass, stream] = group._id.split('_');
            if (grpMedium === medium) {
              let totalDue = 0;
              let totalClassFees = 0;
              let totalPaid = 0;
              let cls;
              let mdm;
              let strm;

              group.students.forEach(s => {
                totalDue += (s.totalFees || 0) - (s.feesPaid || 0);
                totalClassFees += (s.totalFees || 0);
                totalPaid += (s.feesPaid || 0);
                cls = s.studentClass;
                mdm = s.medium;
                strm = s?.stream;
              });

              // Accumulate overall totals
              overallFees += totalClassFees;
              overallPaid += totalPaid;
              overallDue += totalDue;
        %>
          <tr>
            <td><%= index++ %></td>
            <td><%= studentClass %></td>
            <td><%= stream || '-' %></td>
            <td>₹<%= totalClassFees %></td>
            <td>₹<%= totalPaid %></td>
            <td>₹<%= totalDue %></td>
            <td>
              <a 
                href="/students/classes/<%= cls %>?medium=<%= encodeURIComponent(mdm) %><% if (strm) { %>&stream=<%= encodeURIComponent(strm) %><% } %>" 
                class="btn btn-sm btn-primary">
                Details
              </a>
            </td>
          </tr>
        <% 
            }
          }); 
        %>
      </tbody>
      <tfoot>
        <tr class="table-secondary fw-bold">
          <td colspan="3" class="text-end">Overall Total</td>
          <td>₹<%= overallFees %></td>
          <td>₹<%= overallPaid %></td>
          <td>₹<%= overallDue %></td>
          <td></td>
        </tr>
      </tfoot>
    </table>
  </div>
<% }); %>

  </div>
</body>
    <% } else if (result.length === 0) { %>
      <p class="text-center no-data">No transactions found for this date.</p>
    <% } else { %>

        <% let totalAmount = 0; result.forEach(r => {
            totalAmount += r.amount
        }); %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>S.No.</th>
              <th>Registration No.</th>
              <th>Student Name</th>
              <th>Amount</th>
              <th>Payment Method</th>
            </tr>
          </thead>
          <tbody>
            <% result.forEach((r, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= r.registrationNo %></td>
                <td><%= r.studentName %></td>
                <td>₹<%= r.amount %></td>
                <td><%= r.paymentMethod %></td>
              </tr>
            <% }) %>
            <tr>
                <td></td>
                <td></td>
                <td>Total students: <%= result.length  %></td>
                <td>Total Payment: ₹<%= totalAmount %></td>
            </tr>
          </tbody>

        </table>
    </div>
    <button class="btn btn-success no-print" onclick="window.print()">Print</button>
    <button class="btn" ><a href="/students/feeReceipt/daywise" class="btn btn-success no-print">Back</a></button>
    <% } %>
  </div>
</body>

</html>
