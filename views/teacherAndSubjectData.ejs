<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Teachers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(to bottom right, #e3f2fd, #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      margin: 0;
      padding: 0;
    }

    .container {
      animation: fadeInUp 0.6s ease-in-out;
    }

    h2.text-primary {
      font-weight: 700;
      text-shadow: 1px 1px 2px rgba(13, 110, 253, 0.3);

    }

    /* Card Styling */
    .card {
      border: none;
      border-radius: 20px;
      background: linear-gradient(145deg, #f8f9fa, #ffffff);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
    }

    .card-title {
      font-size: 1.2rem;
      font-weight: bold;
      color: #198754;
    }

    .card-text {
      font-size: 0.95rem;
      margin-bottom: 1rem;
    }

    .btn-outline-primary {
      border-radius: 50px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
      background-color: #0d6efd;
      color: #fff;
      box-shadow: 0 0 10px rgba(13, 110, 253, 0.5);
      transform: scale(1.05);
    }

    /* Back Button */
    .text-center a.btn-outline-primary {
      padding: 0.6rem 1.5rem;
      font-size: 1rem;
    }

    /* Unauthorized Section */
    .text-danger {
      font-weight: bold;
      text-shadow: 1px 1px 3px rgba(255, 0, 0, 0.2);
    }

    .btn-primary {
      background: linear-gradient(to right, #0d6efd, #0b5ed7);
      border: none;
      border-radius: 50px;
      font-weight: bold;
      padding: 0.6rem 1.5rem;
      transition: background 0.3s ease, transform 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(to right, #0b5ed7, #0d6efd);
      transform: scale(1.05);
      box-shadow: 0 0 10px rgba(13, 110, 253, 0.4);
    }

    /* Alert Styling */
    .alert-warning {
      border-left: 5px solid #ffc107;
      background-color: #fff3cd;
      font-weight: 500;
      border-radius: 12px;
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>

  <% if(locals.user){ %>
    <%- include('navbar.ejs') %>
      <div class="container my-5">
        <h2 class="text-center text-primary mb-4">üë©‚Äçüè´ All Teachers</h2>

        <!-- Class Cards -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
          <% if (data && data.length> 0) {
            const seen = new Set();
            data.forEach(a => {
            if (!seen.has(a.teacherSubject) && a.teacherSubject !== 'None') {

            seen.add(a.teacherSubject);
            %>
            <div class="col">
              <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                  <div>
                    <h5 class="card-title text-success">
                      Subject: <%= a.teacherSubject ? (a.teacherSubject.charAt(0).toUpperCase() +
                        a.teacherSubject.slice(1).toLowerCase()) : 'Not specified' %>

                    </h5>
                    <p class="card-text text-muted">
                      Total Teachers: <strong>
                        <%= a.teacherCount %>
                      </strong>
                    </p>
                  </div>
                  <a href="/teacher/details/<%= a.teacherSubject %>" class="btn btn-outline-primary mt-auto">
                    View Details
                  </a>
                </div>
              </div>
            </div>
            <% } }); %>
              <% } else { %>
                <div class="col-12">
                  <div class="alert alert-warning text-center" role="alert">
                    No teacher data available.
                  </div>
                </div>
                <% } %>
        </div>
      </div>

      <div class="text-center mt-4">
        <a href="/teacher/list" class="btn btn-outline-primary">‚¨Ö Back to Staff Summary</a>
      </div>
      <% } else { %>
        <!-- Unauthorized Message -->
        <div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
          <div class="text-center">
            <h2 class="text-danger">üö´ You are not authorized to view this page.</h2>
            <a href="/login" class="btn btn-primary mt-3">Go to Login</a>
          </div>
        </div>
        <% } %>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
            crossorigin="anonymous"></script>
</body>

</html>