<!DOCTYPE html>
<html>
<head>
    <title>Edit Total Fees</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function toggleStreamField() {
            const classVal = document.getElementById('studentClass').value;
            const streamDiv = document.getElementById('streamDiv');
            streamDiv.style.display = (classVal === '11' || classVal === '12') ? 'block' : 'none';
        }

        window.onload = () => {
            toggleStreamField();
        }
    </script>
</head>
<body class="p-5 bg-light">
   
    <div class="container">

       
        <% if (students) { %>
           <% if (students && students.length > 0) { %>
    <h4>Students Found: <%= students.length %></h4>

    <form method="POST" action="/students/update-total-fees">
        <!-- Hidden fields to preserve query context -->
        <input type="hidden" name="medium" value="<%= queryParams.medium %>">
        <input type="hidden" name="studentClass" value="<%= queryParams.studentClass %>">
        <% if (queryParams.stream) { %>
            <input type="hidden" name="stream" value="<%= queryParams.stream %>">
        <% } %>

        <div class="mb-3">
            <label for="totalFee" class="form-label">Set Total Fee for All Students</label>
            <input type="number" step="0.01" class="form-control" name="totalFee" required>
        </div>

        <button type="submit" class="btn btn-success">âœ… Update Fees</button>
    </form>
<% } else if (students) { %>
    <div class="alert alert-warning">No students found for given filter.</div>
<% } %>
        <% } %>
    </div>
</body>
</html>
