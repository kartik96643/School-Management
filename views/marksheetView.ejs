<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marksheet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f8f9fa;
    }
    .marksheet-container {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .school-header {
      font-weight: bold;
      font-size: 1.75rem;
      color: #0d6efd;
    }
    .school-address{
      font-size: 1rem;
      font-weight: bold;
      color: #0d6efd;
    }
    .marksheet-title {
      font-size: 1.3rem;
      color: #0d6efd;
    }

    @media print{
      .no-print{
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('navbar.ejs') %>

     <% if (result && student) { %>
    <div class="marksheet-container mx-auto">
      <div class="text-center mb-4">
        <div class="school-header">üè´ <%= student.sName  %></div>
        <div class="school-address">üè´ <%= user.sAddress  %></div>
        <div class="marksheet-title">üìÑ <strong>Student Marksheet</strong></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6"><strong>Name:</strong> <%= student.studentName %></div>
        <div class="col-md-6"><strong>Father's Name:</strong> <%= student.fatherName %></div>
        <div class="col-md-6"><strong>Mother's Name:</strong> <%= student.motherName %></div>
        <div class="col-md-6"><strong>Students Dob:</strong> <%= student.studentDob.toISOString().split('T')[0] %></div>
        <div class="col-md-6"><strong>Class:</strong> <%= result.studentClass %></div>
        <div class="col-md-6"><strong>Registration No:</strong> <%= student.registrationNo %></div>
        <div class="col-md-6"><strong>Exam Type:</strong> <%= result.examType %></div>
        <div class="col-md-6"><strong>Session:</strong> <%= result.session %></div>
        <div class="col-md-6"><strong>Result Declaration Date:</strong> <%= new Date(result.date).toISOString().split('T')[0] %></div>

      </div>

      <table class="table table-bordered text-center">
        <thead class="table-info">
          <tr>
            <th>Subject</th>
            <th>Obtained Marks</th>
            <th>Total Marks</th>
          </tr>
        </thead>
        <tbody>
          <% result.subjects.forEach(sub => { %>
            <tr>
              <td><%= sub.name %></td>
              <td><%= sub.obtainedMarks %></td>
              <td><%= sub.totalMarks %></td>
            </tr>
          <% }) %>
          <tr>
            <td><strong>Total Subjects: </strong>  <%= result.subjects.length %></td>
            <td><strong>Total Obtained Marks:</strong> <%= totalObtained %></td>
            <td><strong>Total Marks:</strong> <%= totalMarks %></td>
          </tr>
        </tbody>
      </table>

     <div class="row mt-4">
  <div class="col-md-4"><strong>Percentage:</strong> <%= percentage %>%</div>
  <div class="col-md-4 mt-2"><strong>Grade:</strong> 
    <span class="badge bg-primary fs-6"><%= grade %></span>
  </div>
  <div class="col-md-4 mt-2"><strong>Division:</strong> 
    <span class="badge bg-success fs-6"><%= division %></span>
  </div>
</div>


       <div class="text-center mt-4">
      <button class="btn btn-outline-primary no-print" onclick="window.print()">Print Marksheet</button>
    </div>

    <% if(user) {%>
      <div class="text-center mt-4">
        <a href="/" class="btn btn-outline-primary no-print">‚¨Ö Back to Home</a>
      </div>
      <% } %>
    </div>
    <% } %>
</body>
</html>