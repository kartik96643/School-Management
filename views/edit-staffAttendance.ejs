<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Staff Attendance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f6fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .form-container {
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            width: 800px;
        }

        .form-container h2 {
            margin-bottom: 15px;
            text-align: center;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="form-container">

        <% if(attendance && attendance.length> 0) { %>

            <h2>Edit Attendance</h2>
            <form method="POST" action="/staffAttendance/update/<%= attendance[0]._id %>">
                <div class="form-group mb-3">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" class="form-control"
                        value="<%= attendance[0].date.toISOString().split('T')[0] %>" required>
                </div>

                <div class="form-group mb-3">
                    <label for="jobTitle">Job Title</label>
                    <input type="text" name="jobTitle" id="jobTitle" class="form-control"
                        value="<%= attendance[0].jobTitle %>" readonly>
                </div>

               

                <h5 class="mt-4">Staff's Attendance</h5>
                <table class="table table-bordered mt-3">
                    <thead class="table-light">
                        <tr>
                            <th>S.No.</th>
                            <th>Name</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% attendance[0].records.forEach((rec, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>

                                <td>
                                    <input type="hidden" name="records[<%= index %>][staffId]"
                                        value="<%= rec.staffId %>">
                                    <input type="text" class="form-control"
                                        value="<%= staffNames[index] ? staffNames[index].teacherName.charAt(0).toUpperCase() + staffNames[index].teacherName.slice(1) : 'Unknown' %>"
                                        readonly>
                                </td>
                                <td>

                                    <div class="d-flex justify-content-center gap-3">
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Present"
                                                id="present-<%= index %>" <%=rec.status==="Present" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="present-<%= index %>">Present</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Absent"
                                                id="absent-<%= index %>" <%=rec.status==="Absent" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="absent-<%= index %>">Absent</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input attendance-radio" type="radio"
                                                name="records[<%= index %>][status]" value="Leave"
                                                id="leave-<%= index %>" <%=rec.status==="Leave" ? 'checked' : '' %>>
                                            <label class="form-check-label" for="leave-<%= index %>">Leave</label>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <button type="submit" class="btn btn-primary w-100">Update</button>
                <button class="btn w-100"><a href="/staffAttendance/staff-form" class="btn btn-primary w-100">Cancel</a></button>
            </form>



            <% } else { %>
                <div>
                    <p>No Attendance data to edit</p>
                </div>
                <% } %>
    </div>

    
</body>

</html>