<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Timetable</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
   @media print{
    .no-print{
        display: none;
    }
   }
</style>
<body class="bg-light">

    <% if(timetable){ %>

  <div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-4">
      <h2 class="fw-bold text-primary"><%= timetable?.examType %> Exam Timetable</h2>
      <p class="fs-5 text-muted">
       <h4> <strong>Class:</strong> <%= timetable?.className %> | 
        <strong>Medium:</strong> <%= timetable?.medium %> </h4>
      </p>
    </div>

    <!-- Table -->
    <div class="card shadow-lg rounded-4 border-0">
      <div class="card-body p-4">
        <table class="table table-bordered table-striped text-center align-middle">
          <thead class="table-primary">
            <tr>
              <th scope="col">Subject</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
            </tr>
          </thead>
          <tbody>
            <% timetable.exams.forEach(e => { %>
              <tr>
                <td class="fw-semibold"><%= e.subject %></td>
                <td><%= e.date.toLocaleDateString("en-US",{weekday: "long"}) %> <%= e.date.toLocaleDateString() %></td>
                <td><%= e.startTime %> - <%= e.endTime %></td>%>
              </tr>
            <% }) %>
          </tbody>
        </table>
    </div>
    <button onclick="window.print()" class="btn btn-primary no-print">Print</button>
    <% if(user){ %>
    <button class="btn"><a class="btn btn-primary" href="/exam-timetable">Back</a></button>
    <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<% } else { %>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg rounded-4 border-0 text-center p-5">
          <div class="card-body">
            <!-- Icon -->
            <div class="mb-3 text-danger">
              <i class="bi bi-calendar-x fs-1"></i>
            </div>

            <!-- Message -->
            <h3 class="fw-bold text-danger">No Timetable Found</h3>
            <p class="text-muted fs-5 mt-2">
              It looks like no exam timetable has been added yet.  
              Please check back later.
            </p>

          <% if(user){ %>
    <button class="btn"><a class="btn btn-primary" href="/exam-timetable">Back</a></button>
    <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% } %>

</body>
</html>
